[Unit]
Description=Weather Station API (GitHub Runner)
After=network-online.target

[Service]
User=pi
WorkingDirectory=/home/pi/actions-runner/_work/weather_app/weather_app/backend
Environment="PATH=/home/pi/.local/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pi/.local/bin/uv run uvicorn weather.api:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

